<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NotificationHelper">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/ic_notification"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="@color/color_blue" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:gravity="center"
        android:text="Разрешите приложению отправлять уведомления, чтобы вы могли всегда знать о сроках ваших задач"
        android:textColor="@color/label_secondary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/yes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:layout_marginStart="23dp"
        android:fontFamily="sans-serif-medium"
        android:text="РАЗРЕШИТЬ"
        android:textColor="@color/color_blue"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/Body" />

    <TextView
        android:id="@+id/no_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        app:layout_constraintVertical_weight="1"
        android:layout_marginEnd="23dp"
        android:fontFamily="sans-serif-medium"
        android:text="НЕ РАЗРЕШАТЬ"
        android:textColor="@color/color_blue"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/Body" />

</androidx.constraintlayout.widget.ConstraintLayout>